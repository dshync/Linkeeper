@model List<Link>
@{
    ViewData["Title"] = "Home Page";
}

@if (Model.Count > 0)
{
    <div class="row">
    @foreach (Link link in Model)
    {
        //TODO do this calculation in js script
        <div class="col-md-@Html.Raw(Model.Count <= 3 ? Math.Floor((float)12/Model.Count).ToString() : "3") py-1">
            <div class="card border-info ">
                <div class="card-body">
                    <h5 class="card-title text-center">
                        <a href="@link.Address">@link.Representation</a>
                    </h5>
                    <div class="text-center">
                        <a href="@link.Address" class="btn btn-light">Go there</a>
                        <a href="/edit/@link.Id" class="btn btn-light">Edit</a>
                        <a href="/delete/@link.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
}
<div class="row py-3">
    <div class="col text-center">
        <a href="/add" class="btn btn-secondary">Add link</a>
    </div>
</div>