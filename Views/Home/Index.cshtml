@model List<Link>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @if (Model.Count > 0)
    {
     <div class="row">
        @foreach (Link link in Model)
        {
         <div class="col">
            <div class="card border-info ">
                <div class="card-body">
                    <h5 class="card-title text-center">
                        <a href="@link.Address">@link.Representation</a>
                    </h5>
                    <div class="text-center">
                        <a href="@link.Address" class="btn btn-light">Go there</a>
                        <a href="/edit/@link.Id" class="btn btn-light">Edit</a>
                        <a href="/delete/@link.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
         </div>
        }
    </div>
    }
</div>